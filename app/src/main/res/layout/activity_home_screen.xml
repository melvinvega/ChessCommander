<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.capstone.chesscommander.chesscommander.home_screen"
    android:background="#000000">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:focusable="true"
        android:focusableInTouchMode="false"
        android:background="@drawable/chesscommandercropped"
        android:contentDescription="Chess Commander Home Screen" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Player vs Computer"
        android:id="@+id/pve"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:clickable="true"
        android:contentDescription="Play aginst computer "
        android:contextClickable="false"
        android:onClick="onPvEButtonClick"
        android:textSize="25sp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Player vs Player"
        android:id="@+id/pvp"
        android:layout_below="@+id/pve"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:clickable="true"
        android:contentDescription="Play against another Player"
        android:contextClickable="false"
        android:onClick="onPVPButtonClick"
        android:textSize="25sp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Free Play"
        android:id="@+id/freeplay"
        android:layout_below="@+id/pvp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:clickable="true"
        android:contentDescription="Free Play"
        android:contextClickable="true"
        android:onClick="onFreePlayButtonClick"
        android:textSize="25sp" />
</RelativeLayout>
